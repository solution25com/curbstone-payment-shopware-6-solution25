{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block page_checkout_confirm_payment %}
    {{ parent() }}

    {% set curbstone = page.extensions.curbstone_payment ?? null %}

    {% if curbstone %}
        {% if curbstone.template is defined %}
            {% include curbstone.template with {
                page: page,
                curbstone: curbstone
            } %}
        {% elseif curbstone.iframeUrl is defined %}
            {% include '@Curbstone/storefront/curbstone-payment/curbstone-payment.html.twig' with {
                page: page,
                curbstone: curbstone
            } %}
        {% else %}
        {% endif %}
    {% else %}
    {% endif %}
{% endblock %}
